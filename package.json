{
	"name": "@dependency/deploymentScript",
	"main": "./entrypoint/programmaticAPI",
	"version": "1.2.12",
	"scripts": {
		"upgrade": "echo 'Upgrading also workspaces'; yarn workspaces run upgrade",
		"postinstall": "yarn workspaces run install # always install workspaces, even as a when this module is used as a dependency # important: must be registered on post install, as some package rely on scriptManager binary during installation",
		"buildAndRelease": "yarn run scriptManager shouldCompileScript=true ./ \".buildAndRelease.moduleProject({})\"",
		"build": "yarn run scriptManager shouldCompileScript=true ./ \".buildSourceCode.moduleProject({}, {compile:[/**'./test'*/]})\""
	},
	"workspaces": [
		"./source/*",
		"./source/JSProject/*"
	],
	"private": true,
	"dependencies": {
		"@dependency/buildTool": "https://github.com/AppScriptIO/buildTool#semver:^1.x.x",
		"@dependency/deploymentProvisioning": "https://github.com/AppScriptIO/deploymentProvisioning#semver:^1.x.x",
		"@dependency/javascriptTestRunner": "git+https://github.com/AppScriptIO/javascriptTestRunner.git#semver:^1.x.x",
		"@dependency/nodejsLiveReload": "git+https://github.com/AppScriptIO/nodejsLiveReload.git#semver:^1.x.x"
	},
	"devDependencies": {
		"@dependency/javascriptStaticAnalysis": "https://github.com/AppScriptIO/javascriptStaticAnalysis#semver:^1.x.x",
		"@dependency/javascriptTranspilation": "https://github.com/AppScriptIO/javascriptTranspilation#semver:^1.x.x",
		"@dependency/scriptManager": "https://github.com/AppScriptIO/scriptManager#semver:^1.x.x",
		"typescript": "^3.3.3333"
	}
}
